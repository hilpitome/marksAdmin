<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Marks</h1>

  <table>
    <thead>
      <tr>
        <th>Course code</th>
        <th>Admission number</th>
        <th>Student name</th>
        <th>Cat one</th>
        <th>Cat two</th>
        <th>Exam</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @marks.each do |mark| %>
        <tr>
          <% course = Course.find(mark.course_id)%>
          <td><%= course.course_code %></td>
          <td><%= mark.admission_number %></td>
          <td><%= mark.student_name %></td>
          <td><%= mark.cat_one %></td>
          <td><%= mark.cat_two %></td>
          <td><%= mark.exam %></td>
          <td><%= link_to 'Show', mark %></td>
          <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
          <td><%= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Mark', new_mark_path %>
</div>
