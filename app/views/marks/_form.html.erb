
  <%= form_for(@mark) do |f| %>
    <% if @mark.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@mark.errors.count, "error") %> prohibited this mark from being saved:</h2>

        <ul>
        <% @mark.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :course_code %><br>
      <%= f.collection_select(:course_id, Course.all, :id, :course_code) %>
    </div>
    <div class="form-group">
      <%= f.label :admission_number %><br>
      <%= f.text_field :admission_number, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :student_name %><br>
      <%= f.text_field :student_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :cat_one %><br>
      <%= f.text_field :cat_one, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :cat_two %><br>
      <%= f.text_field :cat_two, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :exam %><br>
      <%= f.number_field :exam, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
